generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  language  String   @default("en")
  theme     String   @default("dark")
  createdAt DateTime @default(now())
}

model Category {
  id     Int    @id @default(autoincrement())
  key    String @unique
  nameEn String
  nameEs String
  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  image       String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
